<% provide(:title, 'パスワード 変更') %>
<div id='submit-form' class='col-12 col-sm-8 col-md-6'>
  <h3>パスワード更新</h3>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.password_field :current_password, help: 'パスワード変更には現在のパスワードが必要です。' %>
    <%= f.submit 'パスワードを更新', class: 'btn btn-primary btn-block' %>
  <% end %>
  <div id='sub-info-links'>
    <%= link_to '戻る', :back %>
  </div>
</div>