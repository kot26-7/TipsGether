<% provide(:title, '新規投稿') %>
<div id='submit-form' class='col-sm-8 col-md-6'>
  <h3>新規投稿</h3>
  <%= bootstrap_form_for @post do |f| %>
    <%= f.text_field :title, autofocus: true, label: 'タイトル' %>
    <%= f.text_area :content, autofocus: true, label: '内容', help: '750字以内' %>
    <%= f.check_box :published, label: '公開する' %>
    <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
  <% end %>
</div>