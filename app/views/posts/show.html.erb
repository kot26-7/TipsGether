<% if @post.user_id != current_user.id && @post.published == false %>
  <div id='submit-form' class='col-sm-8 col-md-6'>
    <h2>この投稿は非公開です。</h2>
  </div>
<% else %>
  <div id='submit-form' class='col-11 col-sm-8 col-md-9'>
    <div id='post-form'>
      <h2><%= @post.title %></h2>
      <hr id='post-line'>
      <h6>
        <%=safe_join(@post.content.split("\n"),tag(:br))%>
      </h6>
    </div>
  </div>
<% end %>