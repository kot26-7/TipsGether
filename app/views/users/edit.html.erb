<% provide(:title, 'プロフィール編集') %>
<div id='submit-form' class='col-sm-8 col-md-6'>
  <h3>プロフィール編集</h3>
  <%= bootstrap_form_for @user do |f| %>
    <%= f.text_field :username, autofocus: true, autocomplete: 'username', help: '半角英数字のみ' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
    <%= f.text_area :introduce, autofocus: true, label: '紹介文', help: '500字以内' %>
    <%= f.submit 'プロフィールを更新', class: 'btn btn-primary btn-block' %>
    <% if @user.id == current_user.id %>
      <div id='sub-info-links'>
        <ul>
          <li><%= link_to 'パスワードを変更', edit_user_registration_path %></li>
          <li><%= link_to 'アカウントを削除', @user, method: :delete, data: { confirm: Settings.delete_confirm_msg }, id: 'delete-btn' %></li>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>